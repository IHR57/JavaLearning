<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" gridLinesVisible="true">

    <columnConstraints>     <!-- define each column width -->
        <ColumnConstraints percentWidth="50.0"/>
        <ColumnConstraints percentWidth="50.0"/>
    </columnConstraints>

    <padding>
        <Insets left="20" right="20"/>
    </padding>

    <Label text="Welcome to Java FX!!" textFill="green" GridPane.rowIndex="0" GridPane.columnIndex="0"
                GridPane.columnSpan="2">
        <font>
            <Font name="Calibri" size="70"/>
        </font>
    </Label>

    <Button text="Button 1" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER"/>
    <Button text="Button 1" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Button 1" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Button text="Button 1" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
    <Button text="Button 1" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
</GridPane>